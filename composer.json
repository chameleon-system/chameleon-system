{
    "name": "chameleon-system/chameleon-system",
    "description": "The Chameleon System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ESONO AG",
            "email": "info@chameleonsystem.com",
            "homepage": "https://www.chameleonsystem.com",
            "role": "Company"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "packages/chameleon-system/chameleon-shop"
        },
        {
            "type": "path",
            "url": "packages/chameleon-system/chameleon-shop-theme-bundle"
        },
        {
            "type": "path",
            "url": "packages/chameleon-system/chameleon-base",
            "options": {
                "versions": {
                    "chameleon-system/chameleon-base": "7.2.x-dev"
                }
            }
        },
        {
            "type": "path",
            "url": "packages/chameleon-system/sanitycheck"
        },
        {
            "type": "path",
            "url": "packages/chameleon-system/sanitycheck-bundle"
        }
    ],
    "require": {
        "chameleon-system/chameleon-base": "7.2.x-dev as 7.1.99",
        "chameleon-system/chameleon-shop": "7.2.x-dev as 7.1.99",
        "chameleon-system/chameleon-shop-theme-bundle": "7.2.x-dev as 7.1.99",
        "incenteev/composer-parameter-handler": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable",
        "symfony/debug-bundle": "^5.4",
        "symfony/maker-bundle": "^1.48",
        "symfony/stopwatch": "^5.4",
        "symfony/var-dumper": "^5.4",
        "symfony/var-exporter": "^5.4",
        "symfony/web-profiler-bundle": "^5.4"
    },
    "autoload": {
        "classmap": [
            "app/AppKernel.php",
            "src/extensions",
            "src/framework"
        ],
        "psr-4": {
            "AppBundle\\": "src/AppBundle"
        }
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "app/console cache:clear",
            "app/console assets:install --symlink --relative web"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
